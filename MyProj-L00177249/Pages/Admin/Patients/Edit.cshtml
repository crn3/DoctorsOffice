@page
@model MyProj_L00177249.Pages.Admin.Patients.EditModel
@{
}

<form method="post">
    <input hidden asp-for="Patient.PPS" />
    <h2>Edit Patient</h2>
    <div asp-validation-summary="All"></div>

    <div class="mb-3">
        <label asp-for="@Model.Patient.PPS">PPS Number</label>
        <input asp-for="@Model.Patient.PPS" class="form-control" required />
        <span asp-validation-for="@Model.Patient.PPS" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="@Model.Patient.FirstName">First Name</label>
        <input asp-for="@Model.Patient.FirstName" class="form-control" />
        <span asp-validation-for="@Model.Patient.FirstName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="@Model.Patient.LastName">Last Name</label>
        <input asp-for="@Model.Patient.LastName" class="form-control" />
        <span asp-validation-for="@Model.Patient.LastName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="@Model.Patient.DOB">Date of Birth</label>
        <input asp-for="@Model.Patient.DOB" type="date" class="form-control" />
        <span asp-validation-for="@Model.Patient.DOB" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="@Model.Patient.Gender">Gender</label>
        <select asp-for="@Model.Patient.Gender" class="form-select">
            <option value="">Select Gender</option>
            <option value="Male">Male</option>
            <option value="Female">Female</option>
            <option value="Other">Other</option>
        </select>
        <span asp-validation-for="@Model.Patient.Gender" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="@Model.Patient.Phone">Phone</label>
        <input asp-for="@Model.Patient.Phone" class="form-control" />
        <span asp-validation-for="@Model.Patient.Phone" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Patient.Email">Email</label>
        <input asp-for="@Model.Patient.Email" class="form-control" />
        <span asp-validation-for="@Model.Patient.Email" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="@Model.Patient.Address">Address</label>
        <input asp-for="@Model.Patient.Address" class="form-control" />
        <span asp-validation-for="@Model.Patient.Address" class="text-danger"></span>
    </div>


    <button type="submit" class="btn btn-primary" style="width:150px">Update</button>
    <a asp-page="Index" class="btn btn-secondary" style="width:150px">Back to Patients</a>

</form>
@section Scripts {
    @{
        <partial name="_validationScriptsPartial" />
    }
}