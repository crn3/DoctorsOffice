@page
@model MyProj_L00177249.Pages.Admin.Patients.IndexModel
@{
}

<h1>Patients</h1>
<a asp-page="Create" class="btn btn-primary">
    Add Patient
</a>
<br />

<table class="table table-striped">
    <thead>
        <tr>
            <th>PPS</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Date of Birth</th>
            <th>Gender</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Address</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model.Patients)
        {
            <tr>
                <td width="5%">@obj.PPS</td>
                <td width="15%">@obj.FirstName</td>
                <td width="15%">@obj.LastName</td>
                <td width="15%">@obj.DOB.ToShortDateString()</td>
                <td width="10%">@obj.Gender</td>
                <td width="15%">@obj.Phone</td>
                <td width="20%">@obj.Email</td>
                <td width="25%">@obj.Address</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-page="Edit" asp-route-id="@obj.PPS">Edit</a>
                    </div>
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-page="Delete" asp-route-id="@obj.PPS" class="btn btn-primary mx-2">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
